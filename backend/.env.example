# AI Supplier Report Backend Environment Configuration

# Server Configuration
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# LLM Configuration
OPENAI_API_KEY=your-openai-api-key-here
LLM_MODEL=gpt-3.5-turbo
LLM_TEMPERATURE=0.3

# Database Configuration
DATABASE_URL=sqlite:./data/procurement.db

# Security Configuration
JWT_SECRET=your-jwt-secret-key-here
BCRYPT_SALT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# Feature Flags
ENABLE_ANALYTICS_CACHE=true
CACHE_TTL_MINUTES=30
ENABLE_DETAILED_LOGGING=true

# Email Configuration (for notifications, optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@company.com
SMTP_PASS=your-email-password
FROM_EMAIL=ai-supplier-report@company.com

# External API Configuration
# Add any additional external service API keys here
# EXTERNAL_API_KEY=your-external-api-key

# Development/Debug Settings
DEBUG_LLM_RESPONSES=true
DEBUG_SQL_QUERIES=false
ENABLE_CORS_DEBUG=true

# Performance Settings
MAX_FILE_UPLOAD_SIZE=10485760
REQUEST_TIMEOUT_MS=30000
LLM_TIMEOUT_MS=25000

# Health Check Configuration
HEALTH_CHECK_INTERVAL_MS=30000
ENABLE_HEALTH_CHECKS=true
